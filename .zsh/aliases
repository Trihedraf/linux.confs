alias sudo='sudo '
alias aptup='sudo apt update && sudo apt upgrade'
alias flatup='sudo flatpak update -y'
alias grep='grep --color=auto'
alias hg='_hg'
alias l1='ls -A1 --color'
alias lg='looking-glass-client -m 148 -f /dev/kvmfr0'
alias ll='ls -lAh --g --full-time --color'
alias jwtgen="_jwtgen"
alias nas='ssh nas.lan'
alias pa='ps -A | grep'
alias t='tmux attach || tmux new-session'
alias ftn='for f in *.mkv; do title=$(sed -e "s/.* - .* - //g" <<< "${f%.*}"); mkvpropedit "$f" -e info -s title="$title"; done'
alias ftd='_ftd'

# calendar
alias jan='cal -m 01'
alias feb='cal -m 02'
alias mar='cal -m 03'
alias apr='cal -m 04'
alias may='cal -m 05'
alias jun='cal -m 06'
alias jul='cal -m 07'
alias aug='cal -m 08'
alias sep='cal -m 09'
alias oct='cal -m 10'
alias nov='cal -m 11'
alias dec='cal -m 12'

# disk
alias dush='du -sh'
alias used='du -ahx --apparent-size --time --max-depth=1 | sort -hr'

# docker
alias dcb='sudo docker compose build'
alias dcr='sudo docker compose down && sudo docker compose up -d'
alias dcd='sudo docker compose down'
alias dcdc='sudo docker compose down --remove-orphans'
alias dcp='sudo docker compose pull'
alias dcu='sudo docker compose up -d'
alias dcuc='sudo docker compose up --remove-orphans'
alias dlt='sudo docker logs -tf'
alias dcl='sudo docker compose logs -tf'

# file manipulation
alias ..='cd ..'
alias mkcd='_mkcd'
alias rcp='rsync -vcAXtUhhP --inplace --numeric-ids --stats'
alias rmed='_rmed'
alias rmv='rsync -vcAXtUhhP --inplace --numeric-ids --stats --remove-source-files'
alias romzip='_romzip'

# file permissions
alias chwrr='sudo chmod -R a=r,a+X,u+w'
alias chwwr='sudo chmod -R a=r,a+X,u+w,g+w'
alias ch777='sudo chmod -R 777'

# micro
alias ed='micro'
alias nano='micro'
alias vi='micro'

# pacman
alias pac-autopurge='sudo pacman -Qdtq | sudo pacman -Rns -'
alias pac-autoremove='sudo pacman -Qdtq | sudo pacman -R -'
alias pac-install='sudo pacman -S'
alias pac-purge='sudo pacman -Rns'
alias pac-remove='sudo pacman -R'
alias pac-search='sudo pacman -Ss'
alias pac-up='sudo pacman -Syu'
